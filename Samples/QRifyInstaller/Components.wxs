<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
	 xmlns:util="http://wixtoolset.org/schemas/v4/wxs/util">

	<Fragment>
		<ComponentGroup Id="AddinIconAndStartup"
						Directory="INSTALLFOLDER">
			<Component Guid="{17360542-a4e1-40bb-89fa-b06e20e04e0c}" >
				<!--this file gets generated by the add-in framework
				in the buid directory of the add-in-->
				<!--it gets harvested by heat-->
				<!--it works when added to registry-->
				<RegistryKey
					Root="HKLM"
					Key="Software\solidworks\Addins\$(AddinGuid)">
					<RegistryValue Action="write"
								   Type="string"
								   KeyPath="yes"
								   Name="Icon Path"
								   Value="[LocalAppDataFolder]qrify.png"/>
				</RegistryKey>
			</Component>
			<Component Guid="{4b853935-c2d9-4179-aca4-9ab1978dce24}">
				<RegistryValue Root="HKCU"
							   Key="Software\SolidWorks\AddInsStartup\$(AddinGuid)"
							   Value="1"
							   Type="integer"
							   Action="write"
							   KeyPath="yes"/>

			</Component>
			<Component Id="cmpEventSource"
					   Guid="{ff85bf8c-5bd6-4a08-b0cf-cda8cf1c7cc9}">
				<util:EventSource KeyPath="yes"
								  EventMessageFile="[NETFRAMEWORK40FULLINSTALLROOTDIR64]EventLogMessages.dll"
								  Name="Qrify Addin"
								  Log="Application"/>
			</Component>
		</ComponentGroup>
	</Fragment>
</Wix>
